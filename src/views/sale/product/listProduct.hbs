
<h2 class="page-title mt-4">All Product</h2>
<a href="/product/addproduct" class="btn btn-primary">Add a New Product</a>
<br><br>

{{#if count}}
<table class="table table-striped alignmiddle">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Category</th>
            <th>Product Image</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <tr>
        {{#each products}}
            <td>{{this.title}}</td>
            <td>${{this.price}}</td>
            <td>{{split this.category}}</td>
            <td>{{{compare this.image this._id}}}</td>
            <td><a href="/product/editproduct/{{this._id}}">Edit</a></td>
            <td><a id="delete" class="confirmDelete" href="/product/deleteproduct/{{this._id}}">Delete</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{else}}
<h3 class="text-center">There are no products</h3>

{{/if}}
